
<odoo>

    <record id='account_payment_view_extended_ippay_ach' model='ir.ui.view'>
        <field name='name'>account.payment.view.extended></field>
        <field name='model'>account.payment</field>
        <field name='inherit_id' ref='account.view_account_payment_invoice_form'/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name='check_number'  options="{'no_create': True}"
                attrs="{'invisible': [('payment_method_code', '!=', 'electronic')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
