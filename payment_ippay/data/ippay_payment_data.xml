<odoo>

    <record id="payment_acquirer_ippay" model="payment.acquirer">
        <field name="name">IPpay</field>
        <field name="image" type="base64" file="payment_ippay/static/src/img/ippay.png"/>
        <field name="provider">ippay</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="environment">test</field>
        <field name="description" type="html">
            <p>
                An IPpay payment gateway to accept online payments via credit cards.
            </p>
        </field>
        <field name="api_url">https://testgtwy.ippay.com/ippay</field>
        <field name="ippay_terminal_id">TESTTERMINAL</field>
        <field name="payment_icon_ids" eval="[(6, 0, [
                ref('payment.payment_icon_cc_visa'),
                ref('payment.payment_icon_cc_mastercard'),
                ref('payment.payment_icon_cc_american_express'),
            ])]"
        />
    </record>

</odoo>
