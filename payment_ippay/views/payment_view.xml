<odoo>

    <record id='acquirer_form_ippay' model='ir.ui.view'>
        <field name='name'>acquirer.form.ippay></field>
        <field name='model'>payment.acquirer</field>
        <field name='inherit_id' ref='payment.acquirer_form'/>
        <field name='arch' type='xml'>
            <xpath expr="//notebook" position="inside">
                <page name="ippay_config" string="IPPay Config" attrs="{'invisible': [('provider', '!=', 'ippay')]}">
                    <group>
                        <group>
                            <field name='api_url' widget="url"/>
                            <field name='ippay_terminal_id'/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
